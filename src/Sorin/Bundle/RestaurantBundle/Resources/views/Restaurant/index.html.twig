{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Restaurant list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Images</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('restaurant_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                    {% for image in entity.images %}
                        {{  image.imageUrl }}
                    {% endfor %}
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('restaurant_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('restaurant_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('restaurant_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
